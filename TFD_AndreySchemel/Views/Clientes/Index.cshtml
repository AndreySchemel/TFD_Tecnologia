@model List<TFD_AndreySchemel.Models.Cliente>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Customers</h2>

@if (@Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Cliente</th></tr>
        </thead>
        <tbody>
            @foreach (var clientes in Model)
            {
                <tr><td>@Html.ActionLink(@clientes.Nome, "Details", new { clientes.Id }, new { clientes.Nome})</td></tr>
            }
        </tbody>
    </table>
}

<p>
    @Html.ActionLink("Adicionar Cliente", "Create")
</p>
<table class="table" id="">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
            </tr>
        }
    </tbody>
</table>  
